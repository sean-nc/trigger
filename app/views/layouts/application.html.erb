    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1">

  </head>

  <body>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
    <div class="links">
      <%= link_to "START SEARCH", search_path, class: "home-button" %>
      <%= link_to "SEARCH TERMS", "https://fintros-scraper1.herokuapp.com/search_terms", class: "home-button"%>
    </div>
    <%= yield %>
  </body>
</html>
